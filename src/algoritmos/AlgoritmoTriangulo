algoritmo triangulo
VAR
   S1, S2, S3, T, AREA: REAL;
INICIO
   IMPRIMA("DIGITE O VALOR DO PRIMEIRO LADO DO TRIANGULO: ");
   LEIA(S1);
   IMPRIMA("DIGITE O VALOR DO SEGUNDO LADO: ");
   LEIA(S2);
   IMPRIMA("DIGITE O VALOR DO TERCEIRO LADO: ");
   LEIA(S3);
   T <-- (S1+S2+S3)/2;
   AREA <-- SQRT(T*(T-S1)*(T-S2)*(T-S3));
   IMPRIMA("A ÁREA DO TRIÂNGULO É: ", AREA);
FIM.
